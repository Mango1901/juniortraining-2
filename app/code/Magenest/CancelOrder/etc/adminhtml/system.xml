<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<tab id="magenest" translate="label" sortOrder="999">
			<label>magenest</label>
		</tab>
		<section id="cancelorder" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
			<label>Cancelorder</label>
			<tab>magenest</tab>
			<resource>Magenest_CancelOrder::config_magenest_cancelorder</resource>
			<group id="general" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
				<label>General</label>
				<field id="enabled" type="select" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
					<label>enabled</label>
					<comment/>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field id="order_status" type="multiselect" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
					<label>Allowed Order Status(es)</label>
					<comment/>
					<source_model>Magenest\CancelOrder\Model\Config\Source\OrderStatus</source_model>
				</field>
			</group>
			<group id="frontend" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
				<label>Frontend</label>
				<field id="button_label" type="text" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
					<label>Label Button</label>
					<comment/>
				</field>
				<field id="popup_notice" type="textarea" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
					<label>Popup Notice</label>
					<comment/>
				</field>
                <field id="order_cancellation_reason" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Order Cancellation Reasons</label>
                    <frontend_model>Magenest\CancelOrder\Block\Adminhtml\Form\Field\OrderCancel</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                </field>
				<field id="is_required" type="multiselect" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
					<label>Is Required</label>
					<comment/>
					<source_model>Magenest\CancelOrder\Model\Config\Source\IsRequired</source_model>
				</field>
			</group>
		</section>
	</system>
</config>
